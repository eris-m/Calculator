<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Calculator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Calculator.Controls.OutputArea"
             x:DataType="vm:MainWindowViewModel">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
        <!-- History -->
            <ItemsControl ItemsSource="{Binding History}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:CalculationViewModel">
                        <DockPanel>
							<Label DockPanel.Dock="Right" Content="{Binding Value}" />
							<TextBox Text="{Binding Expression}" />
						</DockPanel>
					</DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
    </StackPanel>
</UserControl>